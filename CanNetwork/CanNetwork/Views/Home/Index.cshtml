@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700|Work+Sans:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")fonts/icomoon/style.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/magnific-popup.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/jquery-ui.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/owl.carousel.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/owl.theme.default.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/animate.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/mediaelement@4.2.7/build/mediaelementplayer.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/main/")fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/aos.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/main/")css/style.css">

</head>

    <section class="job-form-section job-form-section--image">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="job-form-box">
                        <h2 class="heading">
                            Find a <span class="accent">job</span> you will
                            <span class="accent">love</span>.
                        </h2>
                        <form id="job-main-form" method="get" asp-controller="Home" asp-action="Search" class="job-main-form">
                            <div class="controls">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="profession">Position</label>
                                            <input type="text" id="profession" name="position"
                                                   placeholder="Position you are looking for" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="location">Location</label>
                                            <input type="text" id="location" name="location"
                                                   placeholder="Any particular location?" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit"
                                                class="btn btn-outline-white-primary job-main-form__button">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section style="background-image: url(~/img/meeting.jpg); " class="section-divider">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Start searching for your new job now! </p> 
                    <p><a asp-controller="Job" asp-action="Index" class="btn btn-outline-light">See our job offers </a></p>

                    <div class="row align-items-center">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                        </div>

                        <div class="col-md-3">
                            <input type="submit" class="btn btn-search btn-primary btn-block" value="Search">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
